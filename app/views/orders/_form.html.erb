<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :preferred_payment_method, collection: Order.preferred_payment_menthods, default: Order.preferred_payment_menthods.first %>
    <%= f.simple_fields_for(:order_items) do |items_form| %>
      <%= render 'order_item_fields', f: items_form %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Давай ещё', f, :order_items, class: 'btn btn-success' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
