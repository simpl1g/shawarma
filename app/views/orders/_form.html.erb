<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :delivery, label_method: :store_name %>
    <%= f.input :preferred_payment_method, collection: Order.preferred_payment_menthods %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
