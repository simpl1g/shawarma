<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Start at</th>
      <th>Close at</th>
      <th>Deliver at</th>
      <th>Discount</th>
      <th>Created by</th>
      <th>Card number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.store_name %></td>
        <td><%= delivery.start_at %></td>
        <td><%= delivery.close_at %></td>
        <td><%= delivery.deliver_at %></td>
        <td><%= delivery.discount %></td>
        <td><%= delivery.created_by %></td>
        <td><%= delivery.card_number %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

